{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "target": "esnext",
    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom"
    ],
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@root/*": [
        "./src/*"
      ]
    },
    "resolveJsonModule": true,
    "types": [
      "vue",
      "vite/client"
    ],
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "vueCompilerOptions": {
    "plugins": [
    ]
  },
  "include": [
    "vite.config.*",
    "src/**/*",
    "test/**/*"
  ]
}
